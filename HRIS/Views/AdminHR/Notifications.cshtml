                              // leftcolumn += "<hr>";
                              leftcolumn += content;
                              leftcolumn += "</div>";

                              container += leftcolumn;
                              //container += rightcolumn;
                              container += "</div>";
                              return container;
                          }
                      }
                ]
            });

            $('#btnAdd').click(function (e) {
                e.preventDefault();

                var courseId = $('#courseId').val();
                var fileId = $('#fileId').val();
                if (!courseId || !fileId) {
                    return;
                }

