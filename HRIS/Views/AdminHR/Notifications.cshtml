                formData.append("fileModels", JSON.stringify(files));
                formData.append("File_0", opmlFile[0]);


                $.ajax({
                    url: "/api/file/UploadJXFiles/",
                    headers: headers,
                    type: 'POST',
                    data: formData,
                    cache: false,
                    contentType: false,
                    processData: false,
                    dataType: 'json'
                });
            });


            $('#editor').jqxEditor({
                height: "200px",
