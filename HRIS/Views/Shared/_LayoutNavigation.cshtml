
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - HRIS</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/jqwidgets")
    @Styles.Render("~/Content/jsmenu")
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jsmenu")
    @Scripts.Render("~/bundles/jstorage")
    @Scripts.Render("~/bundles/jqwidgets")

    @RenderSection("scripts", required: false)

    
    

</head>

<body>
  


    <main class="cd-main-content">

        <!--Header-->
        <div class="row">
            <div class="col-md-12">
                <header class="cd-main-header" >
                    <a href="#0" class="cd-logo"><img src="~/Content/bg/hollit-logo-small.png" alt="Logo" height="23"></a>

                    <label>@ViewBag.cUsername</label>
                   <!-- <a href="#0" class="cd-nav-trigger">Menu<span></span></a>-->
                    <nav class="cd-nav">
                        <label style="font-size:12px; font-family:Calibri; color:indianred; margin-right:30px">
                            Credential Info: @ViewBag.cUser : @ViewBag.cIDV : Parent= @ViewBag.cIDVParent , ParentLevel= @ViewBag.cIDVParentLevel , Name= @ViewBag.cName
                        </label>
                    </nav>
                </header> <!-- .cd-main-header -->
            </div>
        </div>

        <!--Menu-->
        <div class="row">
            <div class="col-md-2">
                <nav class="cd-side-nav">
                    <ul>
                        <li class="cd-label">Main</li>
                        <li class="has-children overview">
                            @Html.ActionLink("Dashboard", "Dashboard", "Content")
                        </li>

                        <li class="has-children comments">
                            @Html.ActionLink("Timesheet", "Index", "vTimesheets")
                        </li>
                    </ul>
                    <ul>
                        <li class="cd-label">Submit & Approval</li>
                        <li class="has-children overview">
                            @Html.ActionLink("Leave", "vLeave", "Content")
                        </li>
                        <li class="has-children overview">
                            @Html.ActionLink("Medical", "Index", "vMedicalClaim")
                        </li>
                        <li class="has-children overview">
                            @Html.ActionLink("Approval", "Superior", "vApproval")
                        </li>
                    </ul>
                    <ul>
                        <li class="cd-label">Organization </li>
                        <li class="has-children overview">
                            @Html.ActionLink("Structure & Schedule", "Index", "vOrganization")
                        </li>
                        
                    </ul>
                    <ul>
                        <li class="cd-label">Administration</li>
                        <li class="bookmarks">@Html.ActionLink("Approval", "HRApproval", "vApproval") </li>
                        <li class="bookmarks">@Html.ActionLink("Notification / News", "Index", "vNotifNews")</li>
                        <li class="has-children comments">
                            @Html.ActionLink("Timesheet Manager", "HRTimesheets", "vTimesheets")
                        </li>
                        <li class="has-children users">
                            @Html.ActionLink("Employee Management", "EmployeeManagement", "AdminHR")
                        </li>
                    </ul>
                    <ul>
                        <li class="cd-label">System Admin</li>
                        <li class="bookmarks">
                            @Html.ActionLink("Master Data", "MaintainData", "AdminHR")
                        </li>
                        <li class="bookmarks">
                            @Html.ActionLink("User Management", "MaintainData", "AdminHR")
                        </li>
                    </ul>

                </nav>
            </div>
            <div class="col-md-9" style="margin-top:75px">
                @RenderBody()
            </div>
        </div>
       
        <!--Footer-->
        <div class="col">
            <div class="col-sm-12">
                <div class="footer">
                    <hr />
                </div>
            </div>
        </div>

        
        
     
    </main>
    
    <script type="text/javascript">
        $(document).ready(function () {
           // $('body').css('zoom', '90%');
        });
    </script>


   
    @RenderSection("jsData", required: false)

</body>
</html>