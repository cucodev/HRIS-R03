<script type="text/javascript">
    function loadSkill(callback) {
        var url = "http://localhost:54636/api/profileSkill/" + cIDV;
        // prepare the data
        var source =
        {
            datatype: "json",
            datafields: [
                { name: 'ID', type: 'string' },
                { name: 'IDV', type: 'string' },
                { name: 'skillName', type: 'string' },
                { name: 'skillLevel', type: 'int' }
            ],
            id: 'ID',
            url: url
        };
        var dataAdapter = new $.jqx.dataAdapter(source);
        $("#skillTable").jqxGrid(
        {
            width: '100%',
            source: dataAdapter,
            columnsresize: true,
            columns: [
              { text: 'ID', datafield: 'ID', width: "10%" },
              { text: 'IDV', datafield: 'IDV', width: "10%" },
              { text: 'Name', datafield: 'skillName', width: "25%" },
              { text: 'Level', datafield: 'skillLevel', width: "10%" }
            ]
        });

        if (callback != undefined) {
            callback();
        }
    }

    function createForm() {
        console.log("Create Form");
        hris.general.bindInput("skillName", null);
        hris.general.bindDropDown("skillLevel", null);
    }

    $(document).ready(function () {
        hris.general.bindButton("addButton");
        loadSkill(createForm);
    });
</script>



